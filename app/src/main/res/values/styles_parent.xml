<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- The default font for RecyclerView items is too small.
    The margin is a simple delimiter between the words. -->
    <style name="word_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@android:color/holo_orange_light</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="Widget.Hazel.ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/text_button_text_color_selector2</item>
        <item name="cornerRadius">5dp</item>
        <item name="background">@drawable/background_step_button2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance">
        <item name="android:letterSpacing" tools:targetApi="21">0.011</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Primary" parent="@style/TextAppearance">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">@dimen/font_size_primary</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Primary.Enlarge">
        <item name="android:textSize">@dimen/font_size_monster</item>
    </style>

    <style name="TextAppearance.Primary.SingleLine">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Primary.Big">
        <item name="android:textSize">@dimen/font_size_big</item>
    </style>

    <style name="TextAppearance.Primary.Big.Dialog">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.Primary.Big.Splash">
        <item name="android:textSize">@dimen/font_size_giant_medium</item>
        <item name="android:textColor">@color/black_gray</item>
    </style>

    <style name="TextAppearance.Primary.Bigger">
        <item name="android:textSize">@dimen/font_size_giant_medium</item>
        <item name="android:textColor">@color/black_gray</item>
    </style>

    <style name="TextAppearance.Primary.Big.SingleLine">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Primary.Normal">
        <item name="android:textSize">@dimen/font_size_primary_normal</item>
    </style>

    <style name="TextAppearance.Primary.Normal.SingleLine">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Primary.Small">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="TextAppearance.Primary.Small.SingleLine">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Primary.Icons">
        <item name="android:textColor">@color/main_icon_color</item>
    </style>

    <style name="TextAppearance.Secondary">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">@dimen/font_size_secondary</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Secondary.SingleLine">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Secondary.Big">
        <item name="android:textSize">@dimen/font_size_big</item>
    </style>

    <style name="TextAppearance.Secondary.Big.SingleLine">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Secondary.Small">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="TextAppearance.Secondary.Small.SingleLine">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Button" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing" tools:targetApi="21">0.030</item>
    </style>

    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">@drawable/bg_ads_ad</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.AdAttribution.Bottom" parent="AppTheme.AdAttribution">
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RatingBar" parent="Theme.MaterialComponents">
        <item name="colorControlNormal">@color/rating_bar_color</item>
        <item name="colorControlActivated">@color/colorPrimaryStar</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Widget.MaterialComponents.Chip.Choice.ChipStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_color_chip_state</item>
        <item name="chipBackgroundColor">@color/pedo_graph_view_selector</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

</resources>