<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gps.speedometer.odometer.speedtracker.pedometer.stepcounter.ui.fragment.MapFragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/speedometer_map_view"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_guideline"
        tools:context="com.gps.speedometer.odometer.speedtracker.pedometer.stepcounter.ui.activity.SpeedometerActivity" />

    <View
        android:id="@+id/view2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="@dimen/margin_standard_size"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/circular_shadow"
        app:layout_constraintBottom_toTopOf="@+id/bottom_guideline"
        app:layout_constraintStart_toStartOf="parent" />

    <com.github.lzyzsd.circleprogress.ArcProgress
        android:id="@+id/digi_speed_txt"
        android:layout_width="88dp"
        android:layout_height="88dp"
        app:arc_bottom_text="@null"
        app:arc_finished_color="@color/colorPrimary"
        app:arc_progress="0"
        app:arc_text_size="0sp"
        app:arc_angle="255"
        app:arc_suffix_text_size="0sp"
        app:arc_text_color="@color/black_dark"
        app:arc_unfinished_color="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <TextView
        android:id="@+id/btn_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="START"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <TextView
        android:id="@+id/digi_type_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="km/h"
        android:textAlignment="center"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/digi_speed_txt"
        app:layout_constraintEnd_toEndOf="@+id/digi_type_txt_value"
        app:layout_constraintStart_toStartOf="@+id/digi_type_txt_value" />

    <TextView
        android:id="@+id/digi_type_txt_value"
        style="@style/TextAppearance.Primary.SingleLine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="500.1"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/digi_type_txt"
        app:layout_constraintEnd_toEndOf="@+id/btn_state"
        app:layout_constraintStart_toStartOf="@+id/btn_state" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />


</androidx.constraintlayout.widget.ConstraintLayout>