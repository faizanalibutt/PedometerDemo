<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.MapFragment">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/speedometer_map_view"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/kal_view"
        tools:context=".ui.activity.SpeedometerActivity" />

    <View
        android:id="@+id/kal_view"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/margin_standard_size"
        app:layout_constraintBottom_toTopOf="@+id/ad_container"
        app:layout_constraintEnd_toStartOf="@+id/v2"
        app:layout_constraintStart_toEndOf="@+id/v1"
        app:layout_constraintTop_toBottomOf="@+id/speedometer_map_view" />

    <ImageView
        android:id="@+id/icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/text_kcal"
        app:layout_constraintEnd_toEndOf="@+id/kal_view"
        app:layout_constraintStart_toStartOf="@+id/kal_view"
        app:layout_constraintTop_toTopOf="@+id/kal_view"
        app:srcCompat="@drawable/ic_shape_567_copy" />

    <TextView
        android:id="@+id/kal_value"
        style="@style/TextAppearance.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_smaller_size"
        android:text="200"
        app:layout_constraintEnd_toEndOf="@+id/icon1"
        app:layout_constraintStart_toStartOf="@+id/icon1"
        app:layout_constraintTop_toBottomOf="@+id/icon1" />

    <TextView
        android:id="@+id/text2"
        style="@style/TextAppearance.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:text="@string/text_kcal"
        app:layout_constraintEnd_toEndOf="@+id/icon1"
        app:layout_constraintStart_toStartOf="@+id/icon1"
        app:layout_constraintTop_toBottomOf="@+id/kal_value" />

    <View
        android:id="@+id/time_view"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginStart="@dimen/margin_smaller_size"
        app:layout_constraintBottom_toBottomOf="@+id/kal_view"
        app:layout_constraintEnd_toStartOf="@+id/v1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/kal_view" />

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/text_kcal"
        app:layout_constraintEnd_toEndOf="@+id/time_view"
        app:layout_constraintStart_toStartOf="@+id/time_view"
        app:layout_constraintTop_toTopOf="@+id/time_view"
        app:srcCompat="@drawable/ic_shape_566_copy" />

    <TextView
        android:id="@+id/time_value"
        style="@style/TextAppearance.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_smaller_size"
        android:text="2:45"
        app:layout_constraintEnd_toEndOf="@+id/icon2"
        app:layout_constraintStart_toStartOf="@+id/icon2"
        app:layout_constraintTop_toBottomOf="@+id/icon2" />

    <TextView
        android:id="@+id/text3"
        style="@style/TextAppearance.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:text="@string/text_time"
        app:layout_constraintEnd_toEndOf="@+id/icon2"
        app:layout_constraintStart_toStartOf="@+id/icon2"
        app:layout_constraintTop_toBottomOf="@+id/time_value" />

    <View
        android:id="@+id/distance_view"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/margin_smaller_size"
        app:layout_constraintBottom_toBottomOf="@+id/kal_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toEndOf="@+id/v2"
        app:layout_constraintTop_toTopOf="@+id/kal_view" />

    <ImageView
        android:id="@+id/icon3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/text_kcal"
        app:layout_constraintEnd_toEndOf="@+id/distance_view"
        app:layout_constraintStart_toStartOf="@+id/distance_view"
        app:layout_constraintTop_toTopOf="@+id/distance_view"
        app:srcCompat="@drawable/ic_shape_568_copy" />

    <TextView
        android:id="@+id/distance_value"
        style="@style/TextAppearance.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_smaller_size"
        android:text="3.18"
        app:layout_constraintEnd_toEndOf="@+id/icon3"
        app:layout_constraintStart_toStartOf="@+id/icon3"
        app:layout_constraintTop_toBottomOf="@+id/icon3" />

    <TextView
        android:id="@+id/text4"
        style="@style/TextAppearance.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:text="@string/text_miles"
        app:layout_constraintEnd_toEndOf="@+id/icon3"
        app:layout_constraintStart_toStartOf="@+id/icon3"
        app:layout_constraintTop_toBottomOf="@+id/distance_value" />

    <View
        android:id="@+id/v1"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_smaller_size"
        android:background="#36000000"
        app:layout_constraintBottom_toTopOf="@+id/text2"
        app:layout_constraintEnd_toStartOf="@+id/kal_view"
        app:layout_constraintStart_toEndOf="@+id/time_value"
        app:layout_constraintTop_toBottomOf="@+id/icon1" />

    <View
        android:id="@+id/v2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/color_pedo_view_units_bar"
        app:layout_constraintBottom_toTopOf="@+id/text2"
        app:layout_constraintEnd_toStartOf="@+id/kal_view"
        app:layout_constraintStart_toEndOf="@+id/distance_view"
        app:layout_constraintTop_toBottomOf="@+id/icon1" />

    <FrameLayout
        android:id="@+id/ad_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kal_view" />

</androidx.constraintlayout.widget.ConstraintLayout>