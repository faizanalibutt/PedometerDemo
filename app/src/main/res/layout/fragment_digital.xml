<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.DigitalFragment">

    <View
        android:id="@+id/popup_units"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:background="@drawable/background_popup_units"
        app:layout_constraintBottom_toTopOf="@+id/speedometer_digi_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_view" />

    <ImageView
        android:id="@+id/img_1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:contentDescription="@string/kmh"
        app:layout_constraintBottom_toBottomOf="@+id/popup_units"
        app:layout_constraintEnd_toEndOf="@+id/popup_units"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/units_text"
        app:layout_constraintTop_toTopOf="@id/popup_units"
        app:srcCompat="@drawable/ic_shape_10_copy" />

    <TextView
        android:id="@+id/units_text"
        style="@style/TextAppearance.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kmh"
        app:layout_constraintBottom_toBottomOf="@+id/popup_units"
        app:layout_constraintEnd_toStartOf="@+id/img_1"
        app:layout_constraintStart_toStartOf="@+id/popup_units"
        app:layout_constraintTop_toTopOf="@id/popup_units" />

    <View
        android:id="@+id/vehicle_view"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="@dimen/margin_xmedium_size"
        android:layout_marginTop="@dimen/margin_standard_size"
        android:layout_marginEnd="@dimen/margin_xmedium_size"
        android:layout_marginBottom="@dimen/margin_standard_size"
        android:background="@drawable/background_vehicle_view"
        app:layout_constraintBottom_toTopOf="@+id/speedometer_digi_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <ImageView
        android:id="@+id/cycle_view"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="@string/text_speedo"
        app:layout_constraintBottom_toBottomOf="@+id/vehicle_view"
        app:layout_constraintEnd_toStartOf="@+id/v11"
        app:layout_constraintStart_toStartOf="@+id/vehicle_view"
        app:layout_constraintTop_toTopOf="@+id/vehicle_view"
        app:srcCompat="@drawable/ic_shape_1940_copy" />

    <ImageView
        android:id="@+id/car_view"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="@string/text_speedo"
        app:layout_constraintBottom_toBottomOf="@+id/vehicle_view"
        app:layout_constraintEnd_toStartOf="@+id/v12"
        app:layout_constraintStart_toEndOf="@+id/v11"
        app:layout_constraintTop_toTopOf="@+id/vehicle_view"
        app:srcCompat="@drawable/ic_shape_1941_copy_2" />

    <ImageView
        android:id="@+id/train_view"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="@string/text_speedo"
        app:layout_constraintBottom_toBottomOf="@+id/vehicle_view"
        app:layout_constraintEnd_toEndOf="@+id/vehicle_view"
        app:layout_constraintStart_toEndOf="@+id/v12"
        app:layout_constraintTop_toTopOf="@+id/vehicle_view"
        app:srcCompat="@drawable/ic_shape_1942_copy_2" />

    <View
        android:id="@+id/v11"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="#36000000"
        app:layout_constraintBottom_toBottomOf="@+id/car_view"
        app:layout_constraintEnd_toStartOf="@+id/car_view"
        app:layout_constraintStart_toEndOf="@+id/cycle_view"
        app:layout_constraintTop_toTopOf="@+id/car_view" />

    <View
        android:id="@+id/v12"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/color_pedo_view_units_bar"
        app:layout_constraintBottom_toBottomOf="@+id/car_view"
        app:layout_constraintEnd_toStartOf="@+id/train_view"
        app:layout_constraintStart_toEndOf="@+id/car_view"
        app:layout_constraintTop_toTopOf="@+id/car_view" />

    <View
        android:id="@+id/speedometer_digi_view"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginBottom="@dimen/margin_smallest_size"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_view" />

    <TextView
        android:id="@+id/digi_speed_txt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="00"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/font_size_joker"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintBottom_toBottomOf="@+id/speedometer_digi_view"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintStart_toStartOf="@+id/speedometer_digi_view"
        app:layout_constraintTop_toTopOf="@+id/speedometer_digi_view" />


    <TextView
        android:id="@+id/digi_type_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/km_h_c"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="@+id/speedometer_digi_view"
        app:layout_constraintEnd_toEndOf="@+id/speedometer_digi_view"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="@+id/speedometer_digi_view"
        app:layout_constraintVertical_bias="0.62" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/speedometer_digi_view"
        app:layout_constraintGuide_percent="0.60"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/speedometer_digi_view" />

</androidx.constraintlayout.widget.ConstraintLayout>