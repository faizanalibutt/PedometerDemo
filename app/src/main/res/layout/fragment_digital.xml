<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gps.speedometer.odometer.speedtracker.pedometer.stepcounter.ui.fragment.DigitalFragment">

    <View
        android:id="@+id/popup_units"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dp_18"
        android:background="@drawable/background_popup_units"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_view" />

    <ImageView
        android:id="@+id/img_1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:contentDescription="@string/kmh"
        app:layout_constraintBottom_toBottomOf="@+id/popup_units"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@+id/units_text"
        app:layout_constraintRight_toRightOf="@+id/popup_units"
        app:layout_constraintTop_toTopOf="@id/popup_units"
        app:srcCompat="@drawable/ic_shape_10_copy" />

    <TextView
        android:id="@+id/units_text"
        style="@style/TextAppearance.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kmh"
        app:layout_constraintBottom_toBottomOf="@+id/popup_units"
        app:layout_constraintLeft_toLeftOf="@+id/popup_units"
        app:layout_constraintRight_toLeftOf="@+id/img_1"
        app:layout_constraintTop_toTopOf="@id/popup_units" />

    <View
        android:id="@+id/vehicle_view"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginLeft="@dimen/margin_xmedium_size"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/margin_xmedium_size"
        android:background="@drawable/background_vehicle_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_guideline" />

    <ImageView
        android:id="@+id/cycle_view"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:contentDescription="@string/text_speedo"
        android:padding="5dp"
        android:tint="@color/text_color_chip_state"
        app:layout_constraintBottom_toBottomOf="@+id/vehicle_view"
        app:layout_constraintLeft_toLeftOf="@+id/vehicle_view"
        app:layout_constraintRight_toLeftOf="@+id/v11"
        app:layout_constraintTop_toTopOf="@+id/vehicle_view"
        app:srcCompat="@drawable/ic_shape_1940_copy" />

    <ImageView
        android:id="@+id/car_view"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:contentDescription="@string/text_speedo"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/vehicle_view"
        app:layout_constraintLeft_toRightOf="@+id/v11"
        app:layout_constraintRight_toLeftOf="@+id/v12"
        app:layout_constraintTop_toTopOf="@+id/vehicle_view"
        app:srcCompat="@drawable/ic_shape_1941_copy_2" />

    <ImageView
        android:id="@+id/train_view"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:contentDescription="@string/text_speedo"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/vehicle_view"
        app:layout_constraintLeft_toRightOf="@+id/v12"
        app:layout_constraintRight_toRightOf="@+id/vehicle_view"
        app:layout_constraintTop_toTopOf="@+id/vehicle_view"
        app:srcCompat="@drawable/ic_shape_1942_copy_2" />

    <View
        android:id="@+id/v11"
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:background="#36000000"
        app:layout_constraintBottom_toBottomOf="@+id/car_view"
        app:layout_constraintLeft_toRightOf="@+id/cycle_view"
        app:layout_constraintRight_toLeftOf="@+id/car_view"
        app:layout_constraintTop_toTopOf="@+id/car_view" />

    <View
        android:id="@+id/v12"
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:background="@color/color_pedo_view_units_bar"
        app:layout_constraintBottom_toBottomOf="@+id/car_view"
        app:layout_constraintLeft_toRightOf="@+id/car_view"
        app:layout_constraintRight_toLeftOf="@+id/train_view"
        app:layout_constraintTop_toTopOf="@+id/car_view" />

    <View
        android:id="@+id/speedometer_digi_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/bottom_guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_view" />

    <TextView
        android:id="@+id/digi_speed_txt"
        style="@style/TextAppearance.Primary.Bigger"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|right"
        android:maxLines="1"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:text="00"
        android:textColor="@color/colorPrimary"
        android:visibility="visible"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeMinTextSize="40sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/speedometer_digi_view"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="@+id/speedometer_digi_view"
        app:layout_constraintRight_toLeftOf="@+id/digi_type_txt"
        app:layout_constraintTop_toTopOf="@+id/speedometer_digi_view"
        app:layout_constraintWidth_percent=".6" />


    <TextView
        android:id="@+id/digi_type_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:lines="1"
        android:text="@string/km_h_c"
        android:textSize="40sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/speedometer_digi_view"
        app:layout_constraintLeft_toRightOf="@+id/digi_speed_txt"
        app:layout_constraintRight_toRightOf="@+id/speedometer_digi_view"
        app:layout_constraintTop_toTopOf="@+id/speedometer_digi_view"
        app:layout_constraintVertical_bias=".56"
        app:layout_constraintWidth_percent=".3" />

    <!-- <androidx.constraintlayout.widget.Guideline
         android:id="@+id/guideline7"
         android:layout_width="wrap_content"
         android:layout_height="0dp"
         android:orientation="vertical"
         app:layout_constraintGuide_percent="0.65" />-->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

</androidx.constraintlayout.widget.ConstraintLayout>