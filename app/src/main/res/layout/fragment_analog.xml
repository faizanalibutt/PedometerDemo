    <ImageView
        android:id="@+id/speedometer_view_img"
        android:layout_width="230dp"
        android:layout_height="235dp"
        android:layout_marginVertical="@dimen/margin_smaller_size"
        android:layout_marginHorizontal="@dimen/margin_smaller_size"
        app:srcCompat="@drawable/ic_meter"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_view" />

    <com.github.lzyzsd.circleprogress.ArcProgress
        android:id="@+id/speedometer_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:arc_bottom_text="@null"
        app:arc_finished_color="@color/colorPrimary"
        app:arc_progress="0"
        app:arc_suffix_text_size="1sp"
        app:arc_text_color="@color/black_dark"
        app:arc_text_size="28sp"
        android:layout_marginVertical="46dp"
        android:layout_marginHorizontal="42dp"
        app:arc_unfinished_color="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/speedometer_view_img"
        app:layout_constraintEnd_toEndOf="@+id/speedometer_view_img"
        app:layout_constraintStart_toStartOf="@+id/speedometer_view_img"
        app:layout_constraintTop_toTopOf="@+id/speedometer_view_img" />

    <TextView
        android:id="@+id/digi_type_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/KMH"
        android:fontFamily="@font/roboto_medium"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/speedometer_view_img"
        app:layout_constraintEnd_toEndOf="@+id/speedometer_view_img"
        app:layout_constraintStart_toStartOf="@+id/speedometer_view_img"
        app:layout_constraintTop_toTopOf="@+id/speedometer_view_img"
        app:layout_constraintVertical_bias="0.6" />

</androidx.constraintlayout.widget.ConstraintLayout>