<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    tools:context="com.gps.speedometer.odometer.speedtracker.pedometer.stepcounter.ui.activity.SplashActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/ad_container_splash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/dp_10"
        android:layout_marginStart="@dimen/margin_smaller_size"
        android:layout_marginEnd="@dimen/margin_smaller_size"
        app:layout_constraintBottom_toTopOf="@+id/guideline_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/skipText"
        style="@style/TextAppearance.Secondary.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#909090"
        android:padding="@dimen/dp_5"
        android:textColor="@android:color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ad_container_splash"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.60" />

    <ImageView
        android:id="@+id/appIconsplash"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin_medium_size"
        android:contentDescription="@string/app_name"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/progressBar"
        app:layout_constraintEnd_toEndOf="@+id/ad_container_splash"
        app:layout_constraintStart_toStartOf="@+id/ad_container_splash"
        app:layout_constraintTop_toBottomOf="@+id/guideline_start"
        app:srcCompat="@drawable/ic_title_new_blue_01e2" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small_size"
        android:layout_marginTop="@dimen/margin_medium_size"
        android:layout_marginEnd="@dimen/margin_small_size"
        android:layout_marginBottom="@dimen/margin_medium_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ad_container_splash"
        app:layout_constraintStart_toStartOf="@+id/ad_container_splash"
        app:layout_constraintTop_toBottomOf="@+id/appIconsplash" />

    <include layout="@layout/layout_gdp_view" />

</androidx.constraintlayout.widget.ConstraintLayout>