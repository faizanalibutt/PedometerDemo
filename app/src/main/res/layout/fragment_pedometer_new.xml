<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/ad_container_pedo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="@dimen/margin_smaller_size"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/cl_pie_chart_peedometer" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_pie_chart_peedometer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="visible"
            app:layout_constraintDimensionRatio="7:6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_container_pedo">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_circle_bg_chart"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                app:layout_constraintBottom_toBottomOf="@+id/guideline_pedometer_bottom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline_pedometer_top"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/background_pedo_step" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_pedometer_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="15dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_pedometer_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="15dp" />

            <com.natasa.progressviews.CircleSegmentBar
                android:id="@+id/pedo_process_graph1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                app:bar_color="#e1e1e1"
                app:bar_width="8dp"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/iv_circle_bg_chart"
                app:layout_constraintEnd_toEndOf="@+id/iv_circle_bg_chart"
                app:layout_constraintStart_toStartOf="@+id/iv_circle_bg_chart"
                app:layout_constraintTop_toTopOf="@+id/iv_circle_bg_chart"
                app:progress_color="@color/colorPrimary"
                app:progress_width="8dp" />

            <TextView
                android:id="@+id/steps"
                style="@style/TextAppearance.Primary.Bigger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="40sp"
                app:layout_constraintBottom_toBottomOf="@id/pedo_process_graph1"
                app:layout_constraintEnd_toEndOf="@+id/pedo_process_graph1"
                app:layout_constraintStart_toStartOf="@+id/pedo_process_graph1"
                app:layout_constraintTop_toTopOf="@id/pedo_process_graph1" />

            <TextView
                android:id="@+id/unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_absolute_size"
                android:text="@string/text_steps"
                app:layout_constraintEnd_toEndOf="@+id/steps"
                app:layout_constraintStart_toStartOf="@id/steps"
                app:layout_constraintTop_toBottomOf="@+id/steps" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/start_btn"
            android:layout_width="130dp"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="10dp"
            android:background="@drawable/background_start_btn"
            app:layout_constraintBottom_toTopOf="@+id/kal_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_pie_chart_peedometer" />

        <TextView
            android:id="@+id/step_btn_txt"
            style="@style/TextAppearance.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/text_start_now"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/start_btn"
            app:layout_constraintEnd_toEndOf="@+id/start_btn"
            app:layout_constraintStart_toEndOf="@+id/step_btn_img"
            app:layout_constraintTop_toTopOf="@+id/start_btn"
            app:layout_constraintVertical_bias="0.50" />

        <ImageView
            android:id="@+id/step_btn_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/text_resume"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/start_btn"
            app:layout_constraintEnd_toStartOf="@+id/step_btn_txt"
            app:layout_constraintStart_toStartOf="@+id/start_btn"
            app:layout_constraintTop_toTopOf="@+id/start_btn"
            app:srcCompat="@drawable/ic_shape_569" />

        <View
            android:id="@+id/kal_view"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/margin_standard_size"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/v2"
            app:layout_constraintStart_toEndOf="@+id/v1"
            app:layout_constraintTop_toBottomOf="@+id/start_btn" />

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/text_kcal"
            app:layout_constraintEnd_toEndOf="@+id/kal_view"
            app:layout_constraintStart_toStartOf="@+id/kal_view"
            app:layout_constraintTop_toTopOf="@+id/kal_view"
            app:srcCompat="@drawable/ic_shape_567_copy" />

        <TextView
            android:id="@+id/kal_value"
            style="@style/TextAppearance.Primary.SingleLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:fontFamily="@font/roboto_medium"
            android:text="00"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/icon1"
            app:layout_constraintStart_toStartOf="@+id/icon1"
            app:layout_constraintTop_toBottomOf="@+id/icon1" />

        <TextView
            android:id="@+id/text2"
            style="@style/TextAppearance.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/text_kcal"
            app:layout_constraintEnd_toEndOf="@+id/icon1"
            app:layout_constraintStart_toStartOf="@+id/icon1"
            app:layout_constraintTop_toBottomOf="@+id/kal_value" />

        <View
            android:id="@+id/time_view"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginStart="@dimen/margin_smaller_size"
            app:layout_constraintBottom_toBottomOf="@+id/kal_view"
            app:layout_constraintEnd_toStartOf="@+id/v1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/kal_view" />

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/text_kcal"
            app:layout_constraintEnd_toEndOf="@+id/time_view"
            app:layout_constraintStart_toStartOf="@+id/time_view"
            app:layout_constraintTop_toTopOf="@+id/time_view"
            app:srcCompat="@drawable/ic_shape_566_copy" />

        <TextView
            android:id="@+id/time_value"
            style="@style/TextAppearance.Primary.SingleLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_smaller_size"
            android:fontFamily="@font/roboto_medium"
            android:text="00:00"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/icon2"
            app:layout_constraintStart_toStartOf="@+id/icon2"
            app:layout_constraintTop_toBottomOf="@+id/icon2" />

        <TextView
            android:id="@+id/text3"
            style="@style/TextAppearance.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="@string/text_timo"
            app:layout_constraintEnd_toEndOf="@+id/icon2"
            app:layout_constraintStart_toStartOf="@+id/icon2"
            app:layout_constraintTop_toBottomOf="@+id/time_value" />

        <View
            android:id="@+id/distance_view"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginEnd="@dimen/margin_smaller_size"
            app:layout_constraintBottom_toBottomOf="@+id/kal_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toEndOf="@+id/v2"
            app:layout_constraintTop_toTopOf="@+id/kal_view" />

        <ImageView
            android:id="@+id/icon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/text_kcal"
            app:layout_constraintEnd_toEndOf="@+id/distance_view"
            app:layout_constraintStart_toStartOf="@+id/distance_view"
            app:layout_constraintTop_toTopOf="@+id/distance_view"
            app:srcCompat="@drawable/ic_shape_568_copy" />

        <TextView
            android:id="@+id/distance_value"
            style="@style/TextAppearance.Primary.SingleLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:fontFamily="@font/roboto_medium"
            android:text="0"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/icon3"
            app:layout_constraintStart_toStartOf="@+id/icon3"
            app:layout_constraintTop_toBottomOf="@+id/icon3" />

        <TextView
            android:id="@+id/text4"
            style="@style/TextAppearance.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="@string/text_miles"
            app:layout_constraintEnd_toEndOf="@+id/icon3"
            app:layout_constraintStart_toStartOf="@+id/icon3"
            app:layout_constraintTop_toBottomOf="@+id/distance_value" />

        <View
            android:id="@+id/v1"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="#36000000"
            app:layout_constraintBottom_toTopOf="@+id/text2"
            app:layout_constraintEnd_toStartOf="@+id/kal_view"
            app:layout_constraintStart_toEndOf="@+id/time_view"
            app:layout_constraintTop_toBottomOf="@+id/icon1" />

        <View
            android:id="@+id/v2"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/color_pedo_view_units_bar"
            app:layout_constraintBottom_toTopOf="@+id/text2"
            app:layout_constraintEnd_toStartOf="@+id/kal_view"
            app:layout_constraintStart_toEndOf="@+id/distance_view"
            app:layout_constraintTop_toBottomOf="@+id/icon1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>